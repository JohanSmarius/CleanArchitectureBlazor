@page "/shifts"
@rendermode InteractiveServer

<PageTitle>Shifts - Medical First Aid Manager</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-clock me-2"></i>Shifts
                    </h1>
                    <p class="text-muted">Manage event shifts and scheduling</p>
                </div>
                <a href="/shifts/create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create Shift
                </a>
            </div>
        </div>
    </div>

    <div class="text-center py-5">
        <i class="fas fa-clock fa-4x text-muted mb-4"></i>
        <h4 class="text-muted">Shift Management</h4>
        <p class="text-muted mb-4">This page will show all shifts organized by events.</p>
        <a href="/shifts/create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Create First Shift
        </a>
    </div>
</div>
