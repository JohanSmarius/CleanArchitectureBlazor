@page "/assignments"
@rendermode InteractiveServer

<PageTitle>Assignments - Medical First Aid Manager</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-user-check me-2"></i>Staff Assignments
                    </h1>
                    <p class="text-muted">Manage staff assignments to shifts</p>
                </div>
                <a href="/assignments/create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create Assignment
                </a>
            </div>
        </div>
    </div>

    <div class="text-center py-5">
        <i class="fas fa-user-check fa-4x text-muted mb-4"></i>
        <h4 class="text-muted">Assignment Management</h4>
        <p class="text-muted mb-4">This page will show all staff assignments and their status.</p>
        <a href="/assignments/create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Create First Assignment
        </a>
    </div>
</div>
